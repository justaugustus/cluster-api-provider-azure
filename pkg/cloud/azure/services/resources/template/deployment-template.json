{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterAPI_machine_name": {
      "defaultValue": null,
      "type": "string"
    },
    "virtualNetworks_ClusterAPIVM_vnet_name": {
      "defaultValue": null,
      "type": "string"
    },
    "virtualMachines_ClusterAPIVM_name": {
      "defaultValue": null,
      "type": "string"
    },
    "networkInterfaces_ClusterAPI_name": {
      "defaultValue": null,
      "type": "string"
    },
    "networkInterfaces_ClusterAPI_id": {
      "defaultValue": null,
      "type": "string"
    },
    "publicIPAddresses_ClusterAPI_ip_name": {
      "defaultValue": null,
      "type": "string"
    },
    "networkSecurityGroups_ClusterAPIVM_nsg_name": {
      "defaultValue": null,
      "type": "string"
    },
    "subnets_default_name": {
      "defaultValue": null,
      "type": "string"
    },
    "image_publisher": {
      "defaultValue": null,
      "type": "string"
    },
    "image_offer": {
      "defaultValue": null,
      "type": "string"
    },
    "image_sku": {
      "defaultValue": null,
      "type": "string"
    },
    "image_version": {
      "defaultValue": null,
      "type": "string"
    },
    "osDisk_name": {
      "defaultvalue": null,
      "type": "string"
    },
    "os_type": {
      "defaultValue": null,
      "type": "string"
    },
    "storage_account_type": {
      "defaultValue": null,
      "type": "string"
    },
    "disk_size_GB": {
      "defaultValue": null,
      "type": "int"
    },
    "vm_user": {
        "defaultValue": null,
        "type":"string"
    },
    "vm_size": {
      "defaultValue": null,
      "type": "string"
    },
    "location": {
      "defaultValue": null,
      "type": "string"
    },
    "startup_script": {
      "defaultValue": null,
      "type": "string"
    },
    "sshPublicKey": {
      "defaultValue": null,
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('virtualMachines_ClusterAPIVM_name')]",
      "tags":{
        "machine": "[parameters('clusterAPI_machine_name')]"
      },
      "apiVersion": "2018-10-01",
      "location": "[parameters('location')]",
      "zones": [
          "3"
      ],
      "scale": null,
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vm_size')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('image_publisher')]",
            "offer": "[parameters('image_offer')]",
            "sku": "[parameters('image_sku')]",
            "version": "[parameters('image_version')]"
          },
          "osDisk": {
            "osType": "[parameters('os_type')]",
            "name": "[parameters('osDisk_name')]",
            "createOption": "FromImage",
            "caching": "ReadWrite",
            "managedDisk": {
              "storageAccountType": "[parameters('storage_account_type')]"
            },
            "diskSizeGB": "[parameters('disk_size_GB')]"
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachines_ClusterAPIVM_name')]",
          "adminUsername": "[parameters('vm_user')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": true,
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/', parameters('vm_user'), '/.ssh/authorized_keys')]",
                  "keyData": "[parameters('sshPublicKey')]"
                }
              ]
            }
          },
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[parameters('networkInterfaces_ClusterAPI_id')]"
            }
          ]
        }
      },
      "dependsOn": [
        "[parameters('networkInterfaces_ClusterAPI_id')]"
      ]
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "sku": {
          "name": "Standard"
      },
      "name": "[parameters('publicIPAddresses_ClusterAPI_ip_name')]",
      "tags":{
        "machine": "[parameters('clusterAPI_machine_name')]"
      },
      "apiVersion": "2018-11-01",
      "location": "[parameters('location')]",
      "zones": [
          "3"
      ],
      "scale": null,
      "properties": {
        "provisioningState": "Succeeded",
        "resourceGuid": "48b2c96b-40e6-4378-973c-fd9b7b066c2c",
        "ipAddress": "40.121.193.102",
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4
      },
      "dependsOn": []
    },
    {
      "apiVersion": "2018-10-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('virtualMachines_ClusterAPIVM_name'), '/startup-script')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/', parameters('virtualMachines_ClusterAPIVM_name'))]"
      ],
      "tags": {
        "machine": "[parameters('clusterAPI_machine_name')]",
        "displayName": "config-app"
      },
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "skipDos2Unix": true
        },
        "protectedSettings": {
          "script": "[parameters('startup_script')]"
        }
      }
    }
  ]
}
